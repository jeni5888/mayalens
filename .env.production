# Railway Production Environment Variables
# Copy these to your Railway project environment variables

# Database - Railway will provide this automatically
# DATABASE_URL will be set by Railway PostgreSQL service

# JWT Secrets - Generate secure random strings
JWT_SECRET="your-production-jwt-secret-make-it-long-and-random"
JWT_REFRESH_SECRET="your-production-refresh-jwt-secret-make-it-long-and-random"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Server Configuration
NODE_ENV="production"
# PORT will be set by Railway automatically

# Frontend URL - Update with your deployed frontend domain
FRONTEND_URL="https://your-frontend-domain.vercel.app"
CORS_ORIGIN="https://your-frontend-domain.vercel.app"

# Cloudinary Configuration (for image storage)
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Redis Configuration (optional) - Use Railway Redis if needed
# REDIS_URL will be set by Railway Redis service if you add it

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@mayalens.com"
FROM_NAME="MayaLens"

# AI/ML Configuration
GEMINI_API_KEY="your-gemini-api-key"

# Security
SESSION_SECRET="your-production-session-secret-make-it-long-and-random"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# File Upload
MAX_FILE_SIZE="10485760"
MAX_FILES_COUNT="5"

# Logging
LOG_LEVEL="info"
LOG_FILE="logs/app.log"

# Stripe Configuration (if using payments)
STRIPE_SECRET_KEY="sk_live_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_live_your_stripe_publishable_key"

# Railway Configuration
RAILWAY_ENVIRONMENT="production"

# Image Processing
IMAGE_QUALITY="80"
MAX_IMAGE_WIDTH="2048"
MAX_IMAGE_HEIGHT="2048"